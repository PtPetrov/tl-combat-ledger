{
    "compilerOptions": {
        "target": "ES2021",
        "module": "Node16",
        "moduleResolution": "node16",
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "electron/**/*.ts",
        "shared/**/*.ts"
    ]
}
